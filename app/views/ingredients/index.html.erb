<h1>Ingredients</h1>
<hr>

<% if @ingredients.any? %>
  <ul>
    <% @ingredients.each do |ingredient| %>
      <li><%= link_to ingredient.name, ingredient_path(ingredient) %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no ingredients yet.</p>
<% end %>
<hr>

<p><%= link_to "Create new ingredient", new_ingredient_path %></p>
<p><%= link_to "Recipes", recipes_path %></p>